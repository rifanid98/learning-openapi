  "paths": {
    "/todolist": {
      "get": {
        "summary": "Get All TodoList",
        "description": "Get all active todolist by default",
        "parameters": [
          {
            "in": "query",
            "name": "include_done",
            "required": false,
            "description": "Is include done todolist",
            "schema": {
              "type": "boolean",
              "nullable": true,
              "default": false
            }
          },
          {
            "in": "query",
            "name": "name",
            "required": false,
            "description": "Filter todolist by name",
            "schema": {
              "type": "string",
              "nullable": true,
              "minLength": 1,
              "maxLength": 100
            }
          }
        ],
        "responses": {}
      },
