{
  "openapi": "3.0.3",
  "info": {
    "title": "TodoList RESTful API",
    "version": "1.0.0",
    "description": "OpenAPI for TodoList RESTful API",
    "termsOfService": " https://www.programmerzaman.now",
    "contact": {
      "name": "Eko Kurniawan Khannedy",
