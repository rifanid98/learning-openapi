        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {}
            }
          }
        },
        "responses": {}
      }
    },
    "/todolist/{todoListId}": {
      "put": {
        "summary": "Update existing todolist",
        "description": "Update existing todolist",
        "parameters": [
          {
            "in": "path",
            "name": "todoListId",
            "description": "Todolist id for updated",
            "required": true,
            "schema": {
